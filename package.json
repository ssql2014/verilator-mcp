{
  "name": "@mcp/verilator-server",
  "version": "0.2.0",
  "description": "MCP server for Verilator RTL simulation and verification",
  "main": "dist/index.js",
  "bin": {
    "verilator-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "node test-server.js",
    "test:jest": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "setup": "./setup.sh",
    "diagnose": "./diagnose.sh"
  },
  "keywords": [
    "mcp",
    "verilator",
    "rtl",
    "simulation",
    "verilog",
    "systemverilog",
    "testbench",
    "verification"
